{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
  "paths": {
    "@types-shared": ["../packages/types/index.ts"]
  }
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules"]
}